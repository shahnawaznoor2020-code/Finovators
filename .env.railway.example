PORT=4000
JWT_SECRET=replace-with-long-random-secret
ADMIN_API_KEY=replace-with-admin-api-key

# Supabase Postgres (use connection pooler URL in production)
DATABASE_URL=postgresql://postgres:<password>@<host>:6543/postgres?sslmode=require

# Railway Redis
REDIS_URL=redis://default:<password>@<host>:<port>

# Primary SMTP (general mail)
SMTP_HOST=smtp-relay.brevo.com
SMTP_PORT=587
SMTP_USER=your-smtp-user
SMTP_PASS=your-smtp-pass
SMTP_FROM=GigBit <no-reply@yourdomain.com>

# Admin OTP mailbox
SMTP_ADMIN_USER=admin-mailbox@yourdomain.com
SMTP_ADMIN_PASS=admin-mailbox-smtp-pass
SMTP_ADMIN_FROM=GigBit Admin <admin-mailbox@yourdomain.com>

# User OTP mailbox
SMTP_USER_OTP_USER=user-otp-mailbox@yourdomain.com
SMTP_USER_OTP_PASS=user-otp-mailbox-smtp-pass
SMTP_USER_OTP_FROM=GigBit Verify <user-otp-mailbox@yourdomain.com>

# Optional Brevo API key (if used by backend flow)
BREVO_API_KEY=your-brevo-api-key
